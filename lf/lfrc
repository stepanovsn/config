# Main settings
set nohidden
set incsearch on
set ignorecase on
set smartcase on
set wrapscan on
set tabstop 4
set findlen 2

# set previewer for preview pane and pager
set preview true
set previewer ~/.config/lf/preview.sh
map i $~/.config/lf/preview.sh "$f" | less

map x delete

# Commands
cmd delete ${{
    set -f
    if [ -z "$fx" ]; then
        return;
    fi

    fcount=$(echo "$fx" | wc -l)
    if [ "$fcount" -lt 10 ]; then
        printf "$fx\n"
    else
        printf "$fx\n" | less
    fi
    printf "delete %d files? " $fcount

    read ans
    if [ -n "$ans" ] && [ "$ans" = "yes" ]; then
        rm -rf $fx
    fi
}}

cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.tar) tar xvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# Remove some defaults
cmd open
